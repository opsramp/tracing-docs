{
    "require": {
        "slim/slim": "^4.0",
        "slim/psr7": "^1",
        "open-telemetry/sdk": "^1.0@beta",
        "open-telemetry/opentelemetry-auto-slim": "^1.0@beta",
        "open-telemetry/exporter-otlp": "^1.0@beta",
        "php-http/guzzle7-adapter": "^1.0",
        "open-telemetry/transport-grpc": "^1.0@beta"
    },
    "minimum-stability": "beta",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/open-telemetry/opentelemetry-php"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
